@model Mission06_Herrera.Models.Submission

@{
    ViewData["Title"] = "Movie Submission";
}

@{
    ViewBag.Title = "Movie Submission";
}

<h1 class="display-4">Movie Submission</h1>
<br />

<div>
<h3>Enter the details of a movie you would like to add to Joel's collection.</h3>

@* Creating the form for the user to input a movie to the movie collection*@
<form method="post">
    <input type="hidden" asp-for="MovieId"/>
    <br />
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
    <br/>
    <label asp-for="Title">Title</label>
    <input asp-for="Title"/>
    <br/>
    <label asp-for="Year">Year</label>
    <input asp-for="Year"/>
    <br/>
    <label asp-for="Director">Director</label>
    <input asp-for="Director"/>
    <br/>
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="">Select a Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br/>
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br/>
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo"/>
    <br/>
    <label asp-for="CopiedToPlex">Copied to Plex?</label>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes"/>
    <br/>
    <button type="submit">Submit Movie</button>
    
    <div asp-validation-summary="All"></div>
    
</form>
</div>    